package
{
	public class StepInfo
	{
		public static const MAX_MAYBE_NUM:int = 3;
		
		private var _itemIndex:int;
		
		private var _must:int;
		
		private var _maybe:Array;
		
		public function StepInfo( itemIndex:int, must:int, maybe:Array )
		{
			this._itemIndex = itemIndex;
			this._must = must;
			this._maybe = maybe;
		}
		
		public function copy():StepInfo{
			return new StepInfo( this.itemIndex, this.must, this.maybe );
		}
		
		public function get must():int
		{
			return _must;
		}

		public function set must(value:int):void
		{
			_must = value;
		}

		public function get maybe():Array
		{
			return _maybe;
		}

		public function set maybe(value:Array):void
		{
			_maybe = value;
		}
		
		public function addMaybe( num:int ):Boolean{
			
		}

		public function get itemIndex():int
		{
			return _itemIndex;
		}

		public function set itemIndex(value:int):void
		{
			_itemIndex = value;
		}


	}
}